@using Microsoft.AspNetCore.Identity
@using TaskManager.Models // Upewnij się, że to poprawna przestrzeń nazw dla Twojej klasy User

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @* Zmieniono text-dark na text-light dla lepszej widoczności na ciemnym navbarze *@
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                @* Zmieniono text-dark na text-light dla lepszej widoczności *@
                <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            @* text-white jest OK dla ciemnego tła *@
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            @* text-white jest OK dla ciemnego tła *@
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
